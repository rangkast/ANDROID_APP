<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"
        android:left="4dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <stroke android:width="1dp"
            android:color="@color/transparent"/>
        </shape>
    </item>
</layer-list>